<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:app="http://schemas.android.com/apk/res-auto"
 xmlns:tools="http://schemas.android.com/tools">

 <data>

  <variable
   name="clicker"
   type="com.fire.myreivces.base.Clicker" />

  <variable
   name="bean"
   type="com.gz.loanbaba.ui.activity.MainVM.BeanTabHome" />
 </data>

 <android.support.constraint.ConstraintLayout
  android:id="@+id/bg"
  style="@style/item"
  android:onClick="@{clicker}">

  <ImageView
   android:id="@+id/iv_item"
   android:layout_width="@dimen/dp_22"
   android:layout_height="@dimen/dp_22"
   android:layout_marginTop="@dimen/dp_4"
   app:layout_constraintBottom_toTopOf="@id/tv_name"
   app:layout_constraintDimensionRatio="1"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintRight_toRightOf="parent"
   app:layout_constraintTop_toTopOf="parent"
   app:src="@{bean.iv}"
   tools:src="@drawable/ic_home_checked" />

  <TextView
   android:id="@+id/tv_name"
   style="@style/text"
   android:layout_marginBottom="@dimen/dp_3"
   android:text="@{bean.text}"
   android:textSize="@dimen/sp_11"
   app:layout_constraintBottom_toBottomOf="parent"
   app:layout_constraintLeft_toLeftOf="parent"
   app:layout_constraintRight_toRightOf="parent"
   app:layout_constraintTop_toBottomOf="@id/iv_item"
   app:textColor="@{bean.textColor}"
   tools:text="@string/gzh_home_tab_index" />
 </android.support.constraint.ConstraintLayout>
</layout>
